<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TabLayoutStyleLog">
        <item name="tabTextAppearance">@style/TabLayoutTextStyleLog</item>
        <item name="tabIndicatorColor">@color/log_white</item>
        <item name="tabTextColor">@color/log_gray</item>
        <item name="tabSelectedTextColor">@color/log_white</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMode">fixed</item>
        <item name="android:background">@color/log_purple_500_l</item>
    </style>

    <style name="TabLayoutTextStyleLog">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/log_text_color</item>
    </style>

    <style name="AppTheme.ToolBar_Log" parent="Theme.VisualLog_Log">
        <!--ToolBar 字体颜⾊改为⽩⾊ -->
        <item name="titleTextColor">@android:color/white</item>
        <!-- 溢出菜单图标颜⾊ -->
        <item name="colorControlNormal">@android:color/white</item>
        <!-- 右侧溢出菜单图标⾃定义 -->
        <!--        <item name="actionOverflowButtonStyle">@style/ActionButton.Overflow</item>-->
        <!-- 是否覆盖锚点，默认为true，即盖住 Toolbar -->
        <item name="overlapAnchor">true</item>
        <!-- 弹出层背景颜⾊ -->
        <item name="android:colorBackground">@color/log_white</item>
        <!-- 设置弹出菜单⽂字颜⾊ -->
        <item name="android:textColor">@android:color/black</item>
        <!-- 弹出层垂直⽅向上的偏移，即在竖直⽅向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">0dp</item>
        <!-- 弹出层⽔平⽅向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
    </style>
</resources>